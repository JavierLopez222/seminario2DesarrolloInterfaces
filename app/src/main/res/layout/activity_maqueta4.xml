<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maqueta4">
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll1.1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ll1.2"
            android:background="#3FFF82"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/ll1.1"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#3FFF82"
            android:gravity="center">
            <TextView
                android:id="@+id/textviewTitulo"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="CASANUOVO"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <Space
                android:layout_width="80dp"
                android:layout_height="0dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/imageViewlupa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logolupa"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:background="#E6E6E6"
        android:gravity="center">
        <TextView
            android:id="@+id/textviewsubtitulo"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Jardines y terrazas"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        app:layout_constraintTop_toBottomOf="@+id/ll2"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llscroll1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenterrazauno"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/terrazauno"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Terraza 1
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="40dp"
                        android:layout_height="0dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenterrazados"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/terrazados"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Terraza 2
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:id="@+id/llscroll2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenterrazatres"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/terrazatres"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Terraza 3
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="40dp"
                        android:layout_height="0dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenterrazacuatro"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/terrazacuatro"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Terraza 4
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:id="@+id/llscroll3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenjardinescinco"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/jardinescinco"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jardín 5
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="40dp"
                        android:layout_height="0dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenjardinesseis"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/jardinesseis"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jardín 6
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:id="@+id/llscroll4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenjardinessiete"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/jardinessiete"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jardín 7
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="40dp"
                        android:layout_height="0dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenjardinesocho"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/jardinesocho"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Jardín 8
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:id="@+id/llscroll5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenaltarnueve"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/altarnueve"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Altar 9
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                    <Space
                        android:layout_width="40dp"
                        android:layout_height="0dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#E6E6E6">
                        <ImageView
                            android:id="@+id/imagenaltardiez"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/altardiez"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Altar 10
                            Comodidad al gusto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginTop="105dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>